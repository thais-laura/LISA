#include <Servo.h>

#define pino1 17  // Pino ao qual o servo está conectado
#define pino2 2

Servo servoMotor1;  // Cria um objeto Servo
Servo servoMotor2;

void setup() {
  // Inicia a comunicação serial com 115200 baud rate
  Serial.begin(115200);

  // Anexa o objeto Servo ao pino de controle do servo
  servoMotor.attach(pino1);
  servoMotor.attach(pino2);

  Serial.println("Servo motor teste");
}

void loop() {
  // Gira o servo para a posição 0 graus (extremo esquerdo)
  Serial.println("Movendo para 0 graus");
  servoMotor1.write(0);
  servoMotor2.write(0);
  delay(1000);

  // Gira o servo para a posição 90 graus (meio)
  Serial.println("Movendo para 90 graus");
  servoMotor1.write(90);
  servoMotor2.write(90);
  delay(1000);

  // Gira o servo para a posição 180 graus (extremo direito)
  Serial.println("Movendo para 180 graus");
  servoMotor1.write(180);
  servoMotor2.write(180);
  delay(1000);
}
